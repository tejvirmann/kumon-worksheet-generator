# AI Provider Configuration
# Options: 'openrouter' or 'openai'
AI_PROVIDER=openrouter

# OpenRouter.io Configuration (recommended)
OPENROUTER_API_KEY=your_openrouter_api_key_here
# OR OpenAI Configuration
# OPENAI_API_KEY=your_openai_api_key_here

# Model to use
# For OpenRouter: 'openai/gpt-4', 'openai/gpt-3.5-turbo', 'anthropic/claude-3-opus', etc.
# For OpenAI: 'gpt-4', 'gpt-3.5-turbo', etc.
OPENAI_MODEL=openai/gpt-4

# Flask Configuration
FLASK_ENV=development
SECRET_KEY=your-secret-key-here-change-in-production
PORT=5000

# Optional: Output Directory
OUTPUT_DIR=output

